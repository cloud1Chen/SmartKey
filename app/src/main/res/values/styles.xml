<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- recycleview的item的下划线-->
        <item name="android:listDivider">@drawable/select_contatcs_divider</item>
    </style>
    
    <!-- popupWindow的弹出和关闭的动画 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_bottom_to_top_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_top_to_bottom_out</item>
    </style>

    <!-- 沉浸式状态栏 -->
    <style name="AppTheme.ImmersiveTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

