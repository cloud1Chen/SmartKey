<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:background="#F4F4F4"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="72dp">
    
    <android.support.v7.widget.CardView
        android:layout_marginStart="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="20dp"
        app:cardCornerRadius="18dp"
        android:layout_width="36dp"
        android:layout_height="36dp">
        <com.itel.smartkey.widget.CustomShapeImageView
            android:id="@+id/iv_select_contacts_icon"
            app:onlyDrawBorder="false"
            app:shape="circle"
            app:borderColor="#FFFFFF"
            app:imageBorderWidth="2dp"
            android:src="@mipmap/pic_list_facebook"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginStart="16dp"
        android:id="@+id/contacts_item_name"
        android:gravity="center"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <!--<view-->
