<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.itel.smartkey">

    <!-- 读联系人权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- 写联系人权限 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.MenuActivity"/>

        <activity android:name=".ui.phone.SelectContactsActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="com.itel.smartkey.action.SelectContactsActivity"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.sos.SetupSOSContactsInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".receivertest.SentBroadcastActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->
                <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->
        </activity>

        <!--接收单击双击长按的receiver-->
        <receiver android:name=".receivertest.OneClickReceiver">
            <intent-filter>
                <action android:name="com.itel.smartkey.action.ACTION_SMARTKEY_SINGLE_CLICK"/>
                <action android:name="com.itel.smartkey.action.ACTION_SMARTKEY_DOUBLE_CLICK"/>
                <action android:name="com.itel.smartkey.action.ACTION_SMARTKEY_LONG_CLICK"/>
            </intent-filter>
        </receiver>
    </application>


</manifest>